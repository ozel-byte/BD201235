<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="persistencia">
    <class name="TipoMascota" table="tipom">
        <id name="idtipo" column="idtipoM" type="java.lang.Integer" unsaved-value="null" >
            <generator class="native"> </generator>
        </id>

        <property name="especie" column="especie"/>
        <property name="sexo" column="sexo"/>
        <property name="raza" column="raza"/>

        <bag name="mascota" table="mascota" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="idtipoM" not-null="true"/>
            </key>
            <one-to-many class="Mascota"/>
        </bag>

    </class>
</hibernate-mapping>