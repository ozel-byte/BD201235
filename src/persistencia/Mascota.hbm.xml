<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="persistencia">
    <class name="Mascota" table="mascota">
        <id name="idmascota" column="idmascota" type="java.lang.Integer" unsaved-value="null" >
            <generator class="native"> </generator>
        </id>

        <property name="nombre" column="nombre"/>
        <property name="iddueno" column="idduenoM"/>

        <many-to-one name="tipoMascota" class="TipoMascota" column="idtipoM" not-null="true" fetch="select" />


    </class>
</hibernate-mapping>