<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="persistencia">
    <class name="Mascota" table="mascota">
        <id name="idmascota" column="idmascota" type="java.lang.Integer" unsaved-value="null" >
            <generator class="native"> </generator>
        </id>

        <property name="nombre" column="nombre"/>

        <many-to-one name="tipoMascota" class="TipoMascota" fetch="select">
            <column name="idtipoM" not-null="true"/>
        </many-to-one>

        <many-to-one name="dueno" class="Dueno" fetch="select">
            <column name="idduenoM" not-null="true"/>
        </many-to-one>
        <bag name="cita" table="cita" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="idcita" not-null="true"/>
            </key>
            <one-to-many class="Cita"/>
        </bag>


    </class>
</hibernate-mapping>