<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="persistencia">
    <class name="Dueno" table="duenom">
        <id name="idDueno" column="idduenoM" type="java.lang.Integer" unsaved-value="null" >
            <generator class="native"> </generator>
        </id>
        <property name="nombre" column="nombre"/>
        <property name="direccion" column="direccion"/>
        <property name="telefono" column="telefono"/>
        <property name="correo" column="correo"/>
        
        <bag name="mascotaList" table="mascota" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="idduenoM" not-null="true"/>
            </key>
            <one-to-many class="Mascota" />
        </bag>

    </class>
</hibernate-mapping>